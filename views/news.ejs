        .settings-panel.active {
            transform: translateX(0);
        }
        .language-option {
            transition: all 0.2s ease;
        }
        .language-option:hover {
            background-color: rgba(99, 102, 241, 0.1);
        }
        .theme-toggle {
            transition: all 0.3s ease;
